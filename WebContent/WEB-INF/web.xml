<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
 xsi:schemaLocation=
 "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
 id="WebApp_ID" version="3.0">
  <display-name>Ardemis</display-name>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.jsf</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
    <param-value>.xhtml</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>delta</param-value>
  </context-param>
  <error-page>
     <exception-type>java.lang.Throwable</exception-type>
     <location>/error/exceptionError.jsf</location>
  </error-page>
  <error-page>
  	<error-code>404</error-code>
  	<location>/404.jsf</location>
  </error-page>
  <error-page>
  	<error-code>403</error-code>
  	<location>/403.jsf</location>
  </error-page>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>User Form Auth1</web-resource-name>
      <url-pattern>/faces/*</url-pattern>
    </web-resource-collection>
     <auth-constraint>
      <role-name>admin</role-name>
      <role-name>sale</role-name>
      <role-name>support</role-name>
      <role-name>manager</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>User Form Auth2</web-resource-name>
      <url-pattern>/master/*</url-pattern>
    </web-resource-collection>
     <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>User Form Auth3</web-resource-name>
      <url-pattern>/customers/*</url-pattern>
    </web-resource-collection>
     <auth-constraint>
      <role-name>admin</role-name>
      <role-name>sale</role-name>
      <role-name>customer</role-name>
      <role-name>support</role-name>
      <role-name>manager</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>User Form Auth3</web-resource-name>
      <url-pattern>/faces/manager.jsf</url-pattern>
    </web-resource-collection>
     <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>jdbcrealm</realm-name>
    <form-login-config>
      <form-login-page>/login.jsf</form-login-page>
      <form-error-page>/error.jsf</form-error-page>
    </form-login-config>
  </login-config>

  <security-role>
    <role-name>admin</role-name>
  </security-role>
  <security-role>
    <role-name>customer</role-name>
  </security-role>
  <security-role>
    <role-name>sale</role-name>
  </security-role>
  <security-role>
    <role-name>manager</role-name>
  </security-role>
  <security-role>
    <role-name>support</role-name>
  </security-role>

	<context-param>
		<param-name>primefaces.PRIVATE_CAPTCHA_KEY</param-name>
		<param-value>6LdzXQkTAAAAAC7NdVLOTl1-Ij54A9P0uZN98802</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.PUBLIC_CAPTCHA_KEY</param-name>
		<param-value>6LdzXQkTAAAAAAppMNCQs8lDHWBspOYICHvzBfYe</param-value>
	</context-param>

	<filter>
	    <filter-name>PrimeFaces FileUpload Filter</filter-name>
	    <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>PrimeFaces FileUpload Filter</filter-name>
	    <servlet-name>Faces Servlet</servlet-name>
	</filter-mapping>
	<context-param>
	    <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
	    <param-value>true</param-value>
	</context-param>

</web-app>